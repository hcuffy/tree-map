{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "block-spacing": [
      "error",
      "always"
    ],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "no-unused-vars": ["warn", {
      "vars": "all",
      "args": "none"
    }],
    "arrow-spacing": ["error", {
      "before": true,
      "after": true
    }]

  }
}